<div style="width:30%; margin-top: 100px; margin-left: auto; margin-right: auto">
    <% if (messages && messages.error) { %>
    <div class="alert alert-danger">
        <span> <%= messages.error %> </span>
    </div>
    <% } %>
    <form action="/register" method="post">
        <label>用户名:</label>
        <input type="text" name="username" class="form-control"/>
        <label>密码:</label>
        <input type="password" name="password" id = "pwd" class="form-control"/>
        <label>重复密码:</label>
        <input type="password" name="repassword" id = "repwd" class="form-control" onblur = "return checkPass();"> <span id = "errorpwd" style="display:none;"> 两次密码不一致 </span> </input>
        <label>codeforce-nickname</label>
        <input type="text" name="codeforces" class="form-control"/>
        <label>topcoder-nickname</label>
        <input type="text" name="topcoder" class="form-control"/>
        <label>bestcoder-nickname</label>
        <input type="text" name="bestcoder" class="form-control"/>
        <br/>
        <input type="submit" value="注册" class="btn btn-primary"/>
    </form>
</div>

<script type="text/javascript">
function checkPass() {
    var pwd = document.getElementById("pwd").value
    , repwd = document.getElementById("repwd").value;

    if (pwd != repwd) {
        document.getElementById("errorpwd").style.display = "block";
        return false;
    }
    return true;
}
</script>